@using AngularAspNetMvc.Web.Core.HtmlHelpers
@model AngularAspNetMvc.Models.Contacts.Contact
<div>
    <h1>Edit Contact Type</h1>
</div>


<div>
    @using (@Html.BeginCustomForm("contactForm"))
    {
        @Html.CustomInputFor(m => m.FirstName)
        @Html.CustomInputFor(m => m.LastName)
        @Html.CustomInputFor(m => m.ContactTypeId, InputTagType.Select, htmlAttributes: new Dictionary<string, object>
        {
            {"ng-options", "type.ContactTypeId as type.Name for type in contactTypes"}
        })
        @Html.CustomInputFor(m => m.IsActive, InputTagType.CheckBox)
        @Html.CustomSaveButton()
        @Html.CustomCancelButton()
    }
</div>